
<% @books.each_slice(4) do |book| %>

<div class="card-deck">
	
  <% book.each do |book| %>

  <div class="card">
    
    <%= image_tag (book.coverpath), class: 'card-img-top' %>
    <div class="card-body">
      <h5 class="card-title"><%= book.title %></h5>
      <p class="card-text">This is a wider card with supporting text.</p>
    </div>
    <%= link_to "Read more", book_path(book), class: "btn btn-info" %>
    <div class="card-footer">
      <small class="text-muted"><%= time_ago_in_words(book.created_at) %> ago</small>
    </div>
  </div>
   <% end %>
</div>
<% end %>

<div class="row">
<% @books.each do |book| %>
  <div class="col-md-4">

    <a href="/books/<%= book.id %>">
    <%= image_tag (book.coverpath), class: "book" %>
    <h4><%= link_to book.title, book_path(book) %></h4>
  </a>
  </div>
<% end %>
</div>
